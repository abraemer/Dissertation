@article{elsePrethermalPhasesMatter2017,
	title = {Prethermal {{Phases}} of {{Matter Protected}} by {{Time-Translation Symmetry}}},
	author = {Else, Dominic V. and Bauer, Bela and Nayak, Chetan},
	year = {2017},
	month = mar,
	journal = {Physical Review X},
	volume = {7},
	number = {1},
	pages = {011026},
