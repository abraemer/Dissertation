}

@article{burinLocalizationRandomXY2015,
	title = {Localization in a Random {{XY}} Model with Long-Range Interactions: {{Intermediate}} Case between Single-Particle and Many-Body Problems},
	shorttitle = {Localization in a Random {{XY}} Model with Long-Range Interactions},
	author = {Burin, Alexander L.},
