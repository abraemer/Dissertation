@article{gutmanEnergyTransportAnderson2016,
	title = {Energy Transport in the {{Anderson}} Insulator},
	author = {Gutman, D. B. and Protopopov, I. V. and Burin, A. L. and Gornyi, I. V. and Santos, R. A. and Mirlin, A. D.},
