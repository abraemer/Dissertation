@article{ippolitiManybodyPhysicsNISQ2021,
	title = {Many-Body Physics in the {{NISQ}} Era: Quantum Programming a Discrete Time Crystal},
	shorttitle = {Many-Body Physics in the {{NISQ}} Era},
	author = {Ippoliti, Matteo and Kechedzhi, Kostyantyn and Moessner, Roderich and Sondhi, S. L. and Khemani, Vedika},
