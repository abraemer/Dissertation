	keywords = {Condensed Matter - Disordered Systems and Neural Networks,Condensed Matter - Strongly Correlated Electrons,Disordered Systems and Neural Networks (cond-mat.dis-nn),FOS: Physical sciences,Quantum Physics,Quantum Physics (quant-ph),Strongly Correlated Electrons (cond-mat.str-el)}
}

@article{wuProgrammableOrderDisorder2024,
	title = {Programmable Order by Disorder Effect and Underlying Phases through Dipolar Quantum Simulators},
